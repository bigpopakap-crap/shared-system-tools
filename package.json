{
  "name": "@bigpopakap/shared-system-tools",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "scripts": {
    "lint": "yarn eslint-bigpopakap",
    "lintfix": "yarn lint --fix",
    "test": "echo \"No tests implemented yet\"",
    "clean": "lerna run clean --no-bail -- ",
    "build": "lerna run build --no-bail -- ",
    "rebuild": "yarn clean && yarn build",
    "release-all": "lerna exec --concurrency 1 semantic-release -- "
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lerna run --concurrency 1 --stream precommit",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@bigpopakap/eslint-config": "1.1.61",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@commitlint/travis-cli": "8.3.5",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.5",
    "@semantic-release/npm": "7.0.5",
    "@semantic-release/release-notes-generator": "9.0.1",
    "cz-conventional-changelog": "3.1.0",
    "husky": "4.2.3",
    "lerna": "3.20.2",
    "lint-staged": "10.1.2",
    "semantic-release": "17.0.4",
    "semantic-release-monorepo": "7.0.2",
    "semantic-release-monorepo-hooks": "2.9.5",
    "semantic-release-plugin-decorators": "2.1.1"
  }
}
